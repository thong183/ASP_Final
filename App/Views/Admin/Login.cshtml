@model App.ViewModels.AdminLogin
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Đăng nhập vào trình quản lý</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/bootstrap4/css/bootstrap.css">
    <link rel="stylesheet" href="~/fas/css/all.css">
    <link rel="stylesheet" href="~/css/atomic.css">
    <link rel="stylesheet" href="~/css/admin.css">
    <link href="https://fonts.googleapis.com/css?family=Be+Vietnam&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-4 offset-4">
                <form asp-controller="Admin" asp-action="Login" class="login_form" method="post">
                    <h3><i class="fas fa-book"></i> Book Store</h3>
                    <div class="form-group">
                        <input type="text" asp-for="Username" placeholder="Tên đăng nhập" class="form-control">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="password" asp-for="Password" placeholder="Mật khẩu" class="form-control">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="button button--submit">Đăng nhập</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>