@model App.ViewModels.BookIndex
@{
    ViewData["Title"] = "Trang quản lý sách";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<div class="container-fluid overview">
    <div class="row">
        <div class="container-fluid">
            <a asp-controller="Book" asp-action="Index" class="overview__title overview__title--products overview__title--active">Sách</a>
            <a asp-controller="Book" asp-action="Categories" class="overview__title overview__title--brands">Loại sách</a>
        </div>
    </div>

    <a asp-controller="Book" asp-action="New" class="overview__button overview__button--new"><i class="fas fa-plus"></i>Thêm sách mới</a>

    <table class="overview__table overview__table--products">
        <tr>
            <th>Tựa đề</th>
            <th>Tác giả</th>
            <th>Nhà xuất bản</th>
            <th>Ngày xuất bản</th>
            <th>Đơn giá</th>
            <th>Phần</th>
            <th></th>
        </tr>

        @foreach (var book in Model.Books)
        {
            <tr>
                <td><a asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id">
                    @book.Title
                </a></td>
                <td>
                    @book.Author
                </td>
                <td>
                    @book.Publisher
                </td>
                <td>
                    @book.DatePublish.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @String.Format("{0:0,0 VNĐ}", book.Price)
                </td>
                <td>
                    @book.Saleoff
                </td>
                <td><a asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id" class="overview__button overview__button--delete"><i class="fas fa-trash-alt"></i> Xóa</a></td>
            </tr>
        }
    </table>

    <div class="row">
        <div class="container txt-center w100">
            <a asp-controller="Book" asp-action="Index" class="iblck pagi pagi--active">1</a>
            <a asp-controller="Book" asp-action="Index" class="iblck pagi">2</a>
            <a asp-controller="Book" asp-action="Index" class="iblck pagi">3</a>
            <a asp-controller="Book" asp-action="Index" class="iblck pagi">4</a>
            <a asp-controller="Book" asp-action="Index" class="iblck pagi">5</a>
            <a asp-controller="Book" asp-action="Index" class="iblck pagi">6</a>
            <a asp-controller="Book" asp-action="Index" class="iblck pagi">7</a>
            <a asp-controller="Book" asp-action="Index" class="iblck pagi">8</a>
            <a asp-controller="Book" asp-action="Index" class="iblck pagi">9</a>
        </div>
    </div>
</div>